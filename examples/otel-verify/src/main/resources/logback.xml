<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console: include MDC trace_id injected by the OpenTelemetry plugin -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%X{trace_id}] %logger{20} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- OpenTelemetry: bridges Logback → OTel Logs SDK → OTLP → Loki -->
    <appender name="OpenTelemetry" class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender">
        <!-- Capture the MDC trace_id/span_id set by the plugin as log attributes -->
        <captureMdcAttributes>trace_id,span_id,trace_flags</captureMdcAttributes>
        <captureExperimentalAttributes>true</captureExperimentalAttributes>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="OpenTelemetry"/>
    </root>

    <!-- Suppress noisy framework logs -->
    <logger name="io.netty" level="WARN"/>
    <logger name="io.grpc" level="WARN"/>
    <logger name="com.surrealdev.temporal.core" level="WARN"/>
</configuration>
